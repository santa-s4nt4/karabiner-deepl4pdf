{
    "title": "deepL shortcut key for PDF",
    "conditions": [
      {
        "type": "frontmost_application_if",
        "bundle_identifiers": [
          "^com\\.google\\.Chrome"
        ]
      }
    ],
    "rules": [
      {
        "description": "This erases the line break.",
        "manipulators": [
          {
            "type": "basic",
            "from": {
              "key_code": "c",
              "modifiers": {
                "mandatory": [ "option" ],
                "optional": [ "any" ]
              }
            },
            "to": [
              {"key_code": "c", "modifiers": ["command"]},
              {"key_code": "l", "modifiers": ["command"]},
              {"key_code": "v", "modifiers": ["command"]},
              {"key_code": "a", "modifiers": ["command"]},
              {"key_code": "c", "key_code": "c", "modifiers": ["command"]}
            ]
          }
        ]
      }
    ]
}
